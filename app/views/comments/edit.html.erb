<h1>Editing comment</h1>

<%= form_for([:article, @comment]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <p><%= f.submit %></p>
<% end %>

<%= render 'form' %>

<%= link_to 'Show', @comment %> |
<% link_to 'Back', comments_path %>

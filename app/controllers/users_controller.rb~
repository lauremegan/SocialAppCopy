class UsersController < ApplicationController
  
def show
	#the params retrieve the user id, 
	#to found a id number 
    @user = User.find(params[:id])
  end
	
def create
    @user = User.new(params[:user])
    if @user.save
      # Handle a successful save.
    else
      render 'new'
    end
  end
end
